<div class="container">  
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="page-new">
        <h1 class='text-center'>Create a New Pin</h1>
        <img class='img-prewiew' src='{{link}}'>
        <form role="form" ng-submit="createPin()">
          <div class="form-group">
            <label for="pinDesc">Description</label>
            <input type="text" ng-model="desc" class="form-control" id='pinDesc' required />
          </div>
          <div class="form-group">
            <label  for="pinSource">Source (http link)</label>
              <input type="text" ng-model="link" class="form-control" id='pinSource' required />
          </div>    
          <div class="row">
            <div class="col-xs-6">
              <div class="btn_back">
                <a href="/profile" class="btn btn-back" role="button">
                  <span class="glyphicon glyphicon-arrow-left"></span> 
                Back to Profile</a>
              </div>
            </div>
            <div class="col-xs-6">
              <button class="btn btn-vote pull-right" type="submit"> Create Pin &raquo;</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>