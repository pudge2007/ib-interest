<div class="page-home">
  <div class="banner text-center">
    <h1>Voting App</h1>
    <h4>Real time service for creating, managing and voting polls</h4>
  </div>
  <div class="container">  
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
          <div class="row">
            <div class="col-xs-6">
              <h1>Poll List </h1>
            </div>
          <div class="col-xs-6">
            <input type="text" class="form-control" ng-model="query" placeholder="Search for a poll">
          </div>
          </div>
          <div class="row" ng-switch on="polls.length">
            <ul ng-switch-when="0">
              <li>
                <em>No polls in database. Would you like to <a href="/new">create one</a>?
              </li>
            </ul>
            <ul ng-switch-default>
              <li ng-repeat="poll in polls | filter:query">
                <a class='poll_link' href="/poll/{{poll._id}}">{{poll.question}} <span class="glyphicon glyphicon-arrow-right text-right"></span> </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
</div>