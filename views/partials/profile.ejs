<div class="container">  
  <div class="row">
    <div class="col-xs-12">
      <div class="page-profile">	
        <h1 class='text-center'>Hello, {{username}}</h1>
        <div class="row">
          <div class="col-xs-12">
            <a href="/new" class="btn btn-vote"><span class="glyphicon glyphicon-plus"></span> New Pin</a>
            <ul masonry="{ gutter: 10 }" load-images="true">
              <li class='pin masonry-brick' ng-repeat="pin in userPins">
                <img src='{{pin.link}}'>
                <div class='content'>
                  <span class='delete' ng-click='deletePoll(pin._id)'><i class="fa fa-times" aria-hidden="true"></i></span>
                  <p class='title'>{{pin.description}}</p>
                  <i class="fa fa-heart" aria-hidden="true"> 0</i><i class="fa fa-retweet" aria-hidden="true"> 0</i>
                </div>
                <div class='content bordered'>
                  <div class='avatar'></div>
                  <div class='username'>{{pin.username}}</div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>